@model CommunityPortal.Models.Profile.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .password-card {
            background: linear-gradient(45deg, #f8f9fa, #ffffff);
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .form-control {
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(46, 125, 50, 0.25);
            border-color: #2e7d32;
        }
        .btn-change-password {
            background: linear-gradient(45deg, #2e7d32, #43a047);
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 2rem;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-change-password:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46, 125, 50, 0.3);
        }
        .btn-cancel {
            border-radius: 2rem;
            padding: 0.75rem 2rem;
        }
    </style>
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="password-card p-5">
                <h2 class="text-center mb-4">
                    <i class="fas fa-lock text-primary me-2"></i>
                    Change Password
                </h2>
                
                <form asp-action="ChangePassword" method="post">
                    <input type="hidden" asp-for="UserId" />
                    @Html.AntiForgeryToken()

                    <div class="mb-4">
                        <label asp-for="CurrentPassword" class="form-label">
                            <i class="fas fa-key me-2 text-muted"></i>Current Password
                        </label>
                        <input asp-for="CurrentPassword" class="form-control" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="fas fa-lock me-2 text-muted"></i>New Password
                        </label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmNewPassword" class="form-label">
                            <i class="fas fa-check-circle me-2 text-muted"></i>Confirm New Password
                        </label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-change-password me-2">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="ViewProfile" asp-route-userId="@Model.UserId" 
                           class="btn btn-secondary btn-cancel">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}