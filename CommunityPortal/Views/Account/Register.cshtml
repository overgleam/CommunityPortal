@model CommunityPortal.Models.Account.RegisterViewModel

@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}

@section Styles {
    <style>
        input[type="date"]::-webkit-calendar-picker-indicator {
            cursor: pointer;
            border-radius: 4px;
            margin-right: 2px;
            opacity: 0.6;
            filter: invert(0.8);
        }

            input[type="date"]::-webkit-calendar-picker-indicator:hover {
                opacity: 1
            }

        /* Shake Animation */
        .shake-animation {
            animation: shake 0.5s;
        }

        @@keyframes shake {
            0% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-5px);
            }

            50% {
                transform: translateX(5px);
            }

            75% {
                transform: translateX(-5px);
            }

            100% {
                transform: translateX(0);
            }
        }
    </style>
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-image-register font-swifted">
    <div class="card text-white bg-dark bg-opacity-75 shadow-lg p-4 rounded-4 register-card @(ViewContext.ModelState.ErrorCount > 0 ? "shake-animation" : "")">
        <div class="card-body position-relative">
            <a asp-action="Landing" asp-controller="Home" class="text-white text-decoration-none fs-4 position-absolute top-0 start-0 p-3 back-button">&larr;</a>
            <h2 class="text-center mb-4 text-white">Sign Up</h2>

            <form asp-action="Register" method="post" id="registerForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row g-3">
                    <!-- First Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="First Name" required />
                            <label asp-for="FirstName" class="text-white"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Last Name" required />
                            <label asp-for="LastName" class="text-white"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Second Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Email" required />
                            <label asp-for="Email" class="text-white"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Contact #" maxlength="11" required />
                            <label asp-for="PhoneNumber" class="text-white"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Third Row -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Address" required />
                            <label asp-for="Address" class="text-white"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fourth Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="BlockNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Block #" required />
                            <label asp-for="BlockNumber" class="text-white"></label>
                            <span asp-validation-for="BlockNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="HouseNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="House Number" required />
                            <label asp-for="HouseNumber" class="text-white"></label>
                            <span asp-validation-for="HouseNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fifth Row -->
                    <div class="col-md-6">
                        <div class="form-floating position-relative">
                            <select asp-for="TypeOfResidency" class="form-control bg-transparent text-white border-0 border-bottom" style="color: white !important;" required>
                                <option value="Homeowner" style="color: black;">Homeowner</option>
                                <option value="Tenant" style="color: black;">Tenant</option>
                            </select>
                            <label asp-for="TypeOfResidency" class="text-white"></label>
                            <span asp-validation-for="TypeOfResidency" class="text-danger"></span>
                            <i class="material-icons position-absolute" style="right: 10px; top: 50%; transform: translateY(-50%); pointer-events: none; color: white;">arrow_drop_down</i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="MoveInDate" type="date" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Move In Date" value="" id="MoveInDate" required>
                            <label asp-for="MoveInDate" class="text-white"></label>
                            <span asp-validation-for="MoveInDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Password" required />
                            <label asp-for="Password" class="text-white"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Confirm Password" required />
                            <label asp-for="ConfirmPassword" class="text-white"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn w-50 rounded-3 mt-4 register-button">Sign Up</button>
                </div>

                <!-- Already have an account? -->
                <div class="text-center mt-3">
                    <span>Already have an account? </span>
                    <a asp-action="Login" asp-controller="Account" class="cLog text-white fw-bold text-decoration-none">Click here to Login!</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .cLog {
        text-align: center;
        margin-top: 1rem;
    }

        .cLog:hover {
            text-decoration: underline !important;
        }

    .back-button:hover {
        text-decoration: underline;
        transform: scale(1.2);
        transition: transform 0.2s ease-in-out;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set maximum date to today
            var now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            var maxDateTime = now.toISOString().slice(0, 10); // Only date part
            document.getElementById('MoveInDate').setAttribute('max', maxDateTime);

            // Add custom validation for past dates
            $('#MoveInDate').on('change', function() {
                var selectedDate = new Date(this.value);
                var now = new Date();
                now.setHours(0, 0, 0, 0); // Remove time part for comparison

                if (selectedDate > now) {
                    this.setCustomValidity('Please select a past or current date.');
                } else {
                    this.setCustomValidity('');
                }
            });

            // Shake animation on missing input
            $('#registerForm').on('submit', function(event) {
                var isEmpty = false;
                $(this).find('input[required], select[required]').each(function() {
                    if (!$(this).val().trim()) {
                        isEmpty = true;
                        $(this).addClass('is-invalid'); // Highlight empty fields
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });

                if (isEmpty) {
                    event.preventDefault(); // Prevent form submission
                    $('.register-card').addClass('shake-animation'); // Add shake animation
                    setTimeout(function() {
                        $('.register-card').removeClass('shake-animation'); // Remove animation after it plays
                    }, 500); // Duration of the shake animation
                }
            });
        });
    </script>
}