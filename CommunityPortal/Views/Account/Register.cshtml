@model CommunityPortal.Models.Account.RegisterViewModel

@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
    ViewData["Title"] = "Sign Up";
}

@section Styles {
    <style>
        input[type="date"]::-webkit-calendar-picker-indicator {
            cursor: pointer;
            border-radius: 4px;
            margin-right: 2px;
            opacity: 0.6;
            filter: invert(0.8);
        }

            input[type="date"]::-webkit-calendar-picker-indicator:hover {
                opacity: 1
            }
    </style>
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-image-register font-swifted">
    <div class="card text-white bg-dark bg-opacity-75 shadow-lg p-4 rounded-4 register-card">
        <div class="card-body position-relative">
            <a asp-action="Landing" asp-controller="Home" class="text-white text-decoration-none fs-4 position-absolute top-0 start-0 p-3">&larr;</a>
            <h2 class="text-center mb-4 text-white">Sign Up</h2>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row g-3">
                    <!-- First Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="First Name" />
                            <label asp-for="FirstName" class="text-white"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Last Name" />
                            <label asp-for="LastName" class="text-white"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Second Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Email" />
                            <label asp-for="Email" class="text-white"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="PhoneNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Contact #" maxlength="11" />
                            <label asp-for="PhoneNumber" class="text-white"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Third Row -->
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input asp-for="Address" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Address" />
                            <label asp-for="Address" class="text-white"></label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fourth Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="BlockNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Block #" />
                            <label asp-for="BlockNumber" class="text-white"></label>
                            <span asp-validation-for="BlockNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="HouseNumber" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="House Number" />
                            <label asp-for="HouseNumber" class="text-white"></label>
                            <span asp-validation-for="HouseNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fifth Row -->
                    <div class="col-md-6">
                        <div class="form-floating position-relative">
                            <select asp-for="TypeOfResidency" class="form-control bg-transparent text-white border-0 border-bottom" style="color: white !important;">
                                <option value="Homeowner" style="color: black;">Homeowner</option>
                                <option value="Tenant" style="color: black;">Tenant</option>
                            </select>
                            <label asp-for="TypeOfResidency" class="text-white"></label>
                            <span asp-validation-for="TypeOfResidency" class="text-danger"></span>
                            <i class="material-icons position-absolute" style="right: 10px; top: 50%; transform: translateY(-50%); pointer-events: none; color: white;">arrow_drop_down</i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="MoveInDate" type="date" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Move In Date" value="" id="MoveInDate">
                            <label asp-for="MoveInDate" class="text-white"></label>
                            <span asp-validation-for="MoveInDate" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Last Row -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Password" />
                            <label asp-for="Password" class="text-white"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent text-white border-0 border-bottom" placeholder="Confirm Password" />
                            <label asp-for="ConfirmPassword" class="text-white"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn w-50 rounded-3 mt-4 register-button">Sign Up</button>
                </div>

                <!-- Already have an account? -->
                <div class="text-center mt-3">
                    <span>Already have an account? </span>
                    <a asp-action="Login" asp-controller="Account" class="cLog text-white fw-bold text-decoration-none">Click here to Login!</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .cLog {
        text-align: center;
        margin-top: 1rem;
    }

    .cLog:hover {
        text-decoration: underline !important;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set maximum date to today
            var now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            var maxDateTime = now.toISOString().slice(0, 10); // Only date part
            document.getElementById('MoveInDate').setAttribute('max', maxDateTime);
            
            // Remove the default value setting, not needed
            // No default value needed

            // Add custom validation for past dates
            $('#MoveInDate').on('change', function() {
                var selectedDate = new Date(this.value);
                var now = new Date();
                now.setHours(0, 0, 0, 0); // Remove time part for comparison
                
                if (selectedDate > now) {
                    this.setCustomValidity('Please select a past or current date.');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    </script>
}