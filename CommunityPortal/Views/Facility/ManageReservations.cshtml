@model IEnumerable<CommunityPortal.Models.Facility.FacilityReservation>
@{
    ViewData["Title"] = "Manage Reservations";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Facility Reservations</h1>
        <a asp-action="PaymentMethods" class="btn btn-primary">
            <i class="fas fa-credit-card"></i> Manage Payment Methods
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="reservations-table">
                    <thead>
                        <tr>
                            <th>Facility</th>
                            <th>Homeowner</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Guests</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Payment</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reservation in Model)
                        {
                            <tr>
                                <td>@reservation.Facility.Name</td>
                                <td>
                                    @if (reservation.User?.Homeowner != null)
                                    {
                                        @($"{reservation.User.Homeowner.FirstName} {reservation.User.Homeowner.LastName}")
                                    }
                                    else
                                    {
                                        @reservation.User?.Email
                                    }
                                </td>
                                <td>@reservation.ReservationDate.ToShortDateString()</td>
                                <td>@($"{reservation.StartTime.ToString("h:mm tt")} - {reservation.EndTime.ToString("h:mm tt")}")</td>
                                <td>@reservation.GuestCount</td>
                                <td>₱@reservation.TotalPrice</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(reservation.Status)">
                                        @reservation.Status
                                    </span>
                                </td>
                                <td>
                                    @if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.PaymentPending)
                                    {
                                        if (!string.IsNullOrEmpty(reservation.ReceiptFileName))
                                        {
                                            <span class="badge bg-warning">Receipt Uploaded</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Awaiting Receipt</span>
                                        }
                                    }
                                    else if (reservation.IsPaid)
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">N/A</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-info" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#reservationModal-@reservation.Id">
                                            <i class="fas fa-eye"></i> Details
                                        </button>
                                        
                                        @if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.PaymentPending && 
                                            !string.IsNullOrEmpty(reservation.ReceiptFileName))
                                        {
                                            <a asp-action="PaymentDetails" asp-route-id="@reservation.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-receipt"></i> Verify Payment
                                            </a>
                                        }
                                        else if (reservation.IsPaid)
                                        {
                                            <a asp-action="PaymentDetails" asp-route-id="@reservation.Id" class="btn btn-sm btn-success">
                                                <i class="fas fa-receipt"></i> View Payment
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No reservations found.
                </div>
            }
        </div>
    </div>
</div>

@foreach (var reservation in Model)
{
    <div class="modal fade" id="reservationModal-@reservation.Id" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reservation Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Facility Details</h6>
                            <p><strong>Name:</strong> @reservation.Facility.Name</p>
                            <p><strong>Type:</strong> @reservation.Facility.Type</p>
                            <p><strong>Maximum Occupancy:</strong> @reservation.Facility.MaximumOccupancy people</p>
                            <p><strong>Price Per Hour:</strong> ₱@reservation.Facility.PricePerHour</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Reservation Details</h6>
                            <p><strong>Date:</strong> @reservation.ReservationDate.ToShortDateString()</p>
                            <p><strong>Time:</strong> @($"{reservation.StartTime.ToString("h:mm tt")} - {reservation.EndTime.ToString("h:mm tt")}")</p>
                            <p><strong>Guest Count:</strong> @reservation.GuestCount</p>
                            <p><strong>Total Price:</strong> ₱@reservation.TotalPrice</p>
                            <p><strong>Status:</strong> <span class="badge @GetStatusBadgeClass(reservation.Status)">@reservation.Status</span></p>
                            <p>
                                <strong>Payment Status:</strong>
                                @if (reservation.IsPaid)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.PaymentPending)
                                {
                                    if (!string.IsNullOrEmpty(reservation.ReceiptFileName))
                                    {
                                        <span class="badge bg-warning">Receipt Uploaded - Needs Verification</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Awaiting Payment</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">N/A</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="mt-3">
                        <h6>Homeowner Details</h6>
                        @if (reservation.User?.Homeowner != null)
                        {
                            <p><strong>Name:</strong> @reservation.User.Homeowner.FirstName @reservation.User.Homeowner.LastName</p>
                        }
                        <p><strong>Email:</strong> @reservation.User.Email</p>
                        @if (!string.IsNullOrEmpty(reservation.SpecialRequests))
                        {
                            <p><strong>Special Requests:</strong> @reservation.SpecialRequests</p>
                        }
                    </div>

                    @if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.Rejected)
                    {
                        <div class="mt-3 alert alert-danger">
                            <h6><i class="fas fa-exclamation-triangle"></i> Rejection Information</h6>
                            <p><strong>Reason:</strong> @reservation.RejectionReason</p>
                        </div>
                    }
                    else if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.Cancelled)
                    {
                        <div class="mt-3 alert alert-warning">
                            <h6><i class="fas fa-ban"></i> Cancellation Information</h6>
                            <p><strong>Reason:</strong> @(string.IsNullOrEmpty(reservation.RejectionReason) ? "No reason provided." : reservation.RejectionReason)</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(reservation.ReceiptFileName))
                    {
                        <div class="mt-3">
                            <h6>Payment Receipt</h6>
                            <p>
                                <strong>Uploaded:</strong> @(reservation.ReceiptUploadDate?.ToString("MMMM dd, yyyy, hh:mm tt") ?? "N/A")<br/>
                                <strong>Method:</strong> @(reservation.PaymentMethod ?? "N/A")<br/>
                                <strong>Amount:</strong> ₱@reservation.TotalPrice
                            </p>
                            <div class="mt-2">
                                <img src="~/uploads/receipts/@reservation.ReceiptFileName" alt="Receipt" class="img-thumbnail" style="max-width: 300px;" />
                            </div>
                            
                            @if (reservation.IsPaid && reservation.PaymentVerificationDate.HasValue)
                            {
                                <div class="alert alert-success mt-2">
                                    <p><strong>Verified On:</strong> @reservation.PaymentVerificationDate.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                                    @if (!string.IsNullOrEmpty(reservation.PaymentVerificationNotes))
                                    {
                                        <p><strong>Verification Notes:</strong> @reservation.PaymentVerificationNotes</p>
                                    }
                                </div>
                            }
                            else if (!string.IsNullOrEmpty(reservation.PaymentVerificationNotes))
                            {
                                <div class="alert alert-warning mt-2">
                                    <p><strong>Previous Verification Notes:</strong> @reservation.PaymentVerificationNotes</p>
                                </div>
                            }
                        </div>
                    }

                    <div class="mt-4 border-top pt-3">
                        <h6>Actions</h6>
                        
                        @if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.Pending)
                        {
                            <div class="d-flex gap-2">
                                <form asp-action="UpdateReservationStatus" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <input type="hidden" name="status" value="@CommunityPortal.Models.Facility.ReservationStatus.Approved" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                </form>

                                <button type="button" class="btn btn-danger" 
                                        onclick="showForm('rejectForm-@reservation.Id')">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                                
                                <button type="button" class="btn btn-warning" 
                                        onclick="showForm('cancelForm-@reservation.Id')">
                                    <i class="fas fa-ban"></i> Cancel
                                </button>
                            </div>

                            <div id="rejectForm-@reservation.Id" style="display: none;" class="mt-3">
                                <form asp-action="UpdateReservationStatus" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <input type="hidden" name="status" value="@CommunityPortal.Models.Facility.ReservationStatus.Rejected" />
                                    <div class="mb-3">
                                        <label class="form-label">Rejection Reason</label>
                                        <textarea name="rejectionReason" class="form-control" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-danger">Confirm Rejection</button>
                                </form>
                            </div>
                            
                            <div id="cancelForm-@reservation.Id" style="display: none;" class="mt-3">
                                <form asp-action="AdminCancelReservation" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Cancellation Reason</label>
                                        <textarea name="cancellationReason" class="form-control" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Confirm Cancellation</button>
                                </form>
                            </div>
                        }
                        else if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.PaymentPending)
                        {
                            <div class="d-flex gap-2">
                                @if (!string.IsNullOrEmpty(reservation.ReceiptFileName))
                                {
                                    <form asp-action="VerifyPayment" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@reservation.Id" />
                                        <input type="hidden" name="isPaymentVerified" value="true" />
                                        <input type="hidden" name="verificationNotes" value="Payment verified by admin." />
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-check"></i> Verify Payment
                                        </button>
                                    </form>

                                    <button type="button" class="btn btn-danger" 
                                            onclick="showForm('rejectPaymentForm-@reservation.Id')">
                                        <i class="fas fa-times"></i> Reject Payment
                                    </button>
                                }
                                
                                <button type="button" class="btn btn-warning" 
                                        onclick="showForm('cancelForm-@reservation.Id')">
                                    <i class="fas fa-ban"></i> Cancel Reservation
                                </button>
                            </div>

                            @if (!string.IsNullOrEmpty(reservation.ReceiptFileName))
                            {
                                <div id="rejectPaymentForm-@reservation.Id" style="display: none;" class="mt-3">
                                    <form asp-action="VerifyPayment" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@reservation.Id" />
                                        <input type="hidden" name="isPaymentVerified" value="false" />
                                        <div class="mb-3">
                                            <label for="verificationNotes" class="form-label">Rejection Reason</label>
                                            <textarea id="verificationNotes" name="verificationNotes" class="form-control" rows="3" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-danger">Reject Payment</button>
                                    </form>
                                </div>
                            }
                            
                            <div id="cancelForm-@reservation.Id" style="display: none;" class="mt-3">
                                <form asp-action="AdminCancelReservation" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Cancellation Reason</label>
                                        <textarea name="cancellationReason" class="form-control" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Confirm Cancellation</button>
                                </form>
                            </div>
                        }
                        else if (reservation.Status == CommunityPortal.Models.Facility.ReservationStatus.Approved)
                        {
                            <div class="d-flex gap-2">
                                <form asp-action="UpdateReservationStatus" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <input type="hidden" name="status" value="@CommunityPortal.Models.Facility.ReservationStatus.Completed" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check-double"></i> Mark as Completed
                                    </button>
                                </form>
                                
                                <button type="button" class="btn btn-warning" 
                                        onclick="showForm('cancelForm-@reservation.Id')">
                                    <i class="fas fa-ban"></i> Cancel Reservation
                                </button>
                            </div>
                            
                            <div id="cancelForm-@reservation.Id" style="display: none;" class="mt-3">
                                <form asp-action="AdminCancelReservation" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@reservation.Id" />
                                    <div class="mb-3">
                                        <label class="form-label">Cancellation Reason</label>
                                        <textarea name="cancellationReason" class="form-control" rows="3" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-warning">Confirm Cancellation</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script>
        function showForm(formId) {
            // Hide all forms first
            document.querySelectorAll('[id^="rejectForm-"], [id^="cancelForm-"], [id^="rejectPaymentForm-"]').forEach(form => {
                form.style.display = 'none';
            });
            
            // Show the requested form
            document.getElementById(formId).style.display = 'block';
        }
        
        $(document).ready(function() {
            $('#reservations-table').DataTable({
                order: [[2, 'desc']],  // Sort by date column descending
                language: {
                    search: "Search reservations:",
                    lengthMenu: "Show _MENU_ reservations per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ reservations",
                    emptyTable: "No reservations found"
                }
            });
        });
    </script>
}

@functions {
    private string GetStatusBadgeClass(CommunityPortal.Models.Facility.ReservationStatus status)
    {
        return status switch
        {
            CommunityPortal.Models.Facility.ReservationStatus.Pending => "bg-warning",
            CommunityPortal.Models.Facility.ReservationStatus.Approved => "bg-success",
            CommunityPortal.Models.Facility.ReservationStatus.PaymentPending => "bg-info",
            CommunityPortal.Models.Facility.ReservationStatus.Rejected => "bg-danger",
            CommunityPortal.Models.Facility.ReservationStatus.Cancelled => "bg-secondary",
            CommunityPortal.Models.Facility.ReservationStatus.Completed => "bg-primary",
            _ => "bg-secondary"
        };
    }
} 