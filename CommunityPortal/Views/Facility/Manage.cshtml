@model IEnumerable<CommunityPortal.Models.Facility.Facility>
@{
    ViewData["Title"] = "Manage Facilities";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Facilities</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Facility
        </a>
    </div>

    <div class="row">
        @foreach (var facility in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@facility.Name</h5>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@facility.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@facility.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Are you sure you want to delete this facility?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                @if (!string.IsNullOrEmpty(facility.ImageUrl))
                                {
                                    <img src="@facility.ImageUrl" class="img-fluid rounded" alt="@facility.Name">
                                }
                                else
                                {
                                    <img src="/images/default-facility.jpg" class="img-fluid rounded" alt="Default Facility Image">
                                }
                            </div>
                            <div class="col-md-8">
                                <p><strong>Type:</strong> @facility.Type</p>
                                <p><strong>Operating Hours:</strong> @($"{facility.OpeningTime.ToString("h:mm tt")} - {facility.ClosingTime.ToString("h:mm tt")}")</p>
                                <p><strong>Maximum Occupancy:</strong> @facility.MaximumOccupancy persons</p>
                                <p><strong>Price:</strong> $@facility.PricePerHour/hour</p>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6>Blackout Dates</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Reason</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var blackout in facility.BlackoutDates.OrderBy(bd => bd.StartDate))
                                        {
                                            <tr>
                                                <td>@blackout.StartDate.ToShortDateString()</td>
                                                <td>@blackout.EndDate.ToShortDateString()</td>
                                                <td>@blackout.Reason</td>
                                                <td>
                                                    <form asp-action="RemoveBlackoutDate" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@blackout.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                                onclick="return confirm('Remove this blackout date?')">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <form asp-action="AddBlackoutDate" method="post" class="row g-3 mt-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="FacilityId" value="@facility.Id" />
                                <div class="col-md-4">
                                    <input type="date" name="StartDate" class="form-control form-control-sm" required 
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-4">
                                    <input type="date" name="EndDate" class="form-control form-control-sm" required 
                                           min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-3">
                                    <input type="text" name="Reason" class="form-control form-control-sm" 
                                           placeholder="Reason" required />
                                </div>
                                <div class="col-md-1">
                                    <button type="submit" class="btn btn-sm btn-primary">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info">
                    No facilities have been added yet. 
                    <a asp-action="Create">Add your first facility</a>.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Validate blackout date ranges
            document.querySelectorAll('form[asp-action="AddBlackoutDate"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    const startDate = new Date(this.querySelector('input[name="StartDate"]').value);
                    const endDate = new Date(this.querySelector('input[name="EndDate"]').value);
                    
                    if (endDate < startDate) {
                        e.preventDefault();
                        alert('End date must be after start date');
                    }
                });
            });
        });
    </script>
} 