            padding: 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .dashboard-card-header h2 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
            color: #2c3e50;
        }

        .view-all {
            font-size: 14px;
            color: #4a6fdc;
            text-decoration: none;
        }

        .dashboard-card-body {
            padding: 20px;
            max-height: 400px;
            overflow-y: auto;
        }

        /* Announcements */
        .announcement-item {
            padding: 15px 0;
