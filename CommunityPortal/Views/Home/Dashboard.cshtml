        <!-- Announcements -->
        <div class="col-lg-6 col-xl-4">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h2 class="text-white-dm"><i class="fas fa-bullhorn me-2"></i>Announcements</h2>
                    <a href="@Url.Action("Index", "Announcement")" class="view-all">View All</a>
