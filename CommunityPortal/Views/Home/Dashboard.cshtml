@{
    ViewData["Title"] = "Dashboard";
    Layout = User.IsInRole("admin") || User.IsInRole("staff") ? "_AdminLayout" : "_HomeownersLayout";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <section class="welcome-section mb-4">
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-12">
                    <div class="welcome-card">
                        <div class="welcome-content">
                            <h1>Welcome to your Dashboard</h1>
                            <p class="lead">Your community hub for managing your home and staying connected.</p>
                            <div class="welcome-actions">
                                <a href="@Url.Action("Create", "ServiceRequest")" class="btn btn-primary">
                                    <i class="fas fa-tools me-2"></i>Request Service
                                </a>
                                <a href="@Url.Action("Index", "Billing")" class="btn btn-outline-primary">
                                    <i class="fas fa-file-invoice-dollar me-2"></i>View Payments
                                </a>
                            </div>
                        </div>
                        <div class="welcome-image">
                            <img src="~/images/tramLOGO.jpg" alt="Community Welcome" class="img-fluid rounded-circle">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Stats -->
    <section class="stats-section mb-4">
        <div class="container-fluid p-0">
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <div class="stats-info">
                            <h3 class="text-white-dm">Service Requests</h3>
                            <p class="stats-number">3</p>
                            <p class="stats-text">Active requests</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <div class="stats-info">
                            <h3 class="text-white-dm">Upcoming Events</h3>
                            <p class="stats-number">2</p>
                            <p class="stats-text">This week</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="stats-card">
                        <div class="stats-icon">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <div class="stats-info">
                            <h3 class="text-white-dm">Payments</h3>
                            <p class="stats-number">$0</p>
