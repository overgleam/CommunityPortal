        </div>

        <!-- Documents -->
        <div class="col-lg-6 col-xl-4">
            <div class="dashboard-card">
                <div class="dashboard-card-header">
                    <h2 class="text-white-dm"><i class="fas fa-file-alt me-2"></i>Documents</h2>
                    <a href="@Url.Action("Index", "Documents")" class="view-all">View All</a>
                </div>
                <div class="dashboard-card-body">
                    <div class="documents-list">
                        <div class="document-item">
                            <div class="document-icon">
                                <i class="fas fa-file-pdf"></i>
                            </div>
                            <div class="document-details">
                                <h3 class="text-white-dm">HOA Rules and Regulations</h3>
                                <p class="document-date">Updated: May 15, 2023</p>
                                <p class="document-size">PDF • 1.2 MB</p>
                                <a href="#" class="btn btn-sm btn-outline-primary">Download</a>
                            </div>
                        </div>
                        <div class="document-item">
                            <div class="document-icon">
                                <i class="fas fa-file-word"></i>
                            </div>
                            <div class="document-details">
                                <h3 class="text-white-dm">Community Newsletter - June 2023</h3>
                                <p class="document-date">Published: Jun 1, 2023</p>
                                <p class="document-size">DOCX • 3.5 MB</p>
