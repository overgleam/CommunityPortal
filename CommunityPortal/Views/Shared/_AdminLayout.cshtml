<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://fonts.cdnfonts.com/css/swifted-demo" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lovelace+Text&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Franklin+Gothic+Book&display=swap" rel="stylesheet">
    <!-- Add other font links here if available -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    @RenderSection("Styles" , required: false )
</head>


<body>
    <div class="d-flex min-vh-100" id="wrapper">
        <div class="bg-sidebar border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text mb-3 fs-4 fw-bold text-uppercase border-bottom">
                <img src="/images/logo.png" alt="Logo" width="169" height="92" class="me-2">
            </div>
            <div class="list-group list-group-flush">
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action bg-sidebar">
                    <i class="material-icons me-2">dashboard</i> Dashboard
                </a>
                <a asp-controller="Admin" asp-action="ApproveUsers" class="list-group-item list-group-item-action bg-sidebar">
                    <i class="material-icons me-2">groups</i> User Management
                </a>
                <a asp-controller="Admin" asp-action="CreateStaff" class="list-group-item list-group-item-action bg-sidebar">
                    <i class="material-icons me-2">groups</i> Create Staff Account
                </a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-topbar border-bottom rounded-3">
                <div class="container-fluid">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item me-3">
                                <a class="nav-link" href="#"><i class="material-icons">notifications</i></a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown"
                                   aria-haspopup="true" aria-expanded="false">
                                    <img src="~/images/profile.jpg" alt="Profile" class="rounded-circle me-3" width="30" height="30" />
                                    <span>@User.Identity.Name</span>
                                    <i class="material-icons ms-1">expand_more</i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end">
                                    <a asp-controller="Admin" asp-action="AdminSettings" class="dropdown-item">Settings</a>
                                    <div class="dropdown-divider"></div>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item">Logout</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            <p class="mb-0">&copy; 2023 Community Portal. All rights reserved.</p>
            <p class="mb-0">Contact us: <a href="mailto:support@communityportal.com" class="text-white">support@communityportal.com</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
