<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CommunityPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
 
</head>
<body>
    <div class="bg-image d-flex flex-column min-vh-100">
        <main class="d-flex align-items-center justify-content-center flex-grow-1 h-100">
            <div class="rounded text-center">
                @RenderBody()
            </div>
        </main>

        <footer class="position-absolute bottom-0 start-0 w-100 bg-transparent text-white p-5 d-flex">
            <div class="mb-5 ms-5">
                <a asp-controller="Account" asp-action="Login" class="p-3 px-5 rounded-3 text-white me-5 text-decoration-none"
                   style="background-color: rgba(43, 46, 52, 0.7);">Login</a>
                <a asp-controller="Account" asp-action="Register" class="p-3 px-5 rounded-3 text-white text-decoration-none"
                   style="background-color: rgba(43, 46, 52, 0.7);">Sign Up</a>
            </div>
            <img src="/images/logo.png" alt="Logo" class="position-absolute bottom-0 translate-middle-y" style="right: 100px;" width="200">
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>