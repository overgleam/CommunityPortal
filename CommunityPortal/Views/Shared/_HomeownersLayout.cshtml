<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Neighborhood Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/homeowner.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="/images/logo.png" alt="Logo" width="169" height="92" class="me-2">
                Neighborhood Portal
            </a>

            <!-- Notifications and Profile -->
            <div class="d-flex align-items-center">
                <div class="dropdown me-3">
                    <a class="btn btn-link text-white" href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-bell"></i>
                        <span class="badge bg-danger">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end p-2" style="min-width: 300px;">
                        <h6 class="dropdown-header">Recent Notifications</h6>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="fas fa-calendar-check me-2 text-success"></i>
                            <div>
                                <div>Community Meeting Tomorrow</div>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-center small" href="#">View All Notifications</a>
                    </div>
                </div>
                <div class="d-flex flex-row">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid flex-grow-1">
        <div class="row h-100">
            <!-- Sidebar -->
            <aside class="col-md-3 col-lg-2 bg-light sidebar shadow">
                <div class="position-sticky pt-3">
                    <nav class="nav flex-column">
                        <a class="nav-link active" asp-controller="Homeowner" asp-action="Index">
                            <i class="fas fa-home me-2"></i>
                            Dashboard
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-calendar-alt me-2"></i>
                            Events
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-comments me-2"></i>
                            Community Board
                        </a>
                        <a class="nav-link" href="#">
                            <i class="fas fa-tools me-2"></i>
                            Maintenance Requests
                        </a>
                        <div class="dropdown-divider my-3"></div>
                        <h6 class="sidebar-heading px-3 mt-4 text-muted">Quick Links</h6>
                        <a class="nav-link" href="#">
                            <i class="fas fa-file-invoice-dollar me-2"></i>
                            Payments
                        </a>
                    </nav>
                </div>
            </aside>

            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 px-md-4 py-4">
                <!-- Community Alerts -->
                <div class="alert alert-warning d-flex align-items-center" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <div>Upcoming community cleanup day - Saturday 10:00 AM</div>
                </div>

                <!-- Content Section -->
                <div class="row">
                    <div class="col-12 col-xl-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-bullhorn me-2"></i>Community Board</h5>
                            </div>
                            <div class="card-body">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                    
                    <!-- Quick Actions -->
                    <div class="col-12 col-xl-4">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                            </div>
                            <div class="card-body">
                                <button class="btn btn-outline-success w-100 mb-2">
                                    <i class="fas fa-plus me-2"></i>New Post
                                </button>
                                <button class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fas fa-calendar-plus me-2"></i>Create Event
                                </button>
                                <button class="btn btn-outline-danger w-100">
                                    <i class="fas fa-toolbox me-2"></i>Request Maintenance
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="mt-auto bg-dark text-white py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">&copy; @DateTime.Now.Year Neighborhood Portal</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="#" class="text-white me-3"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="text-white me-3"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white"><i class="fas fa-envelope"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>