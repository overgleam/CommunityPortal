@{
    ViewData["Title"] = "Homeowner Welcome";
    Layout = "~/Views/Shared/_HomeownersLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Dashboard</h1>
    <div class="row">
        <!-- Total Residents Widget -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Total Residents</h5>
                    <p class="card-text display-4">150</p>
                </div>
            </div>
        </div>
        
        <!-- Upcoming Events Widget -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Upcoming Events</h5>
                    <p class="card-text display-4">5</p>
                </div>
            </div>
        </div>
        
        <!-- Pending Requests Widget -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Pending Requests</h5>
                    <p class="card-text display-4">12</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Announcements Widget -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Latest Announcements
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Community meeting on Friday</li>
                    <li class="list-group-item">Pool maintenance scheduled</li>
                    <li class="list-group-item">New gym equipment installed</li>
                </ul>
            </div>
        </div>

        <!-- Recent Payments Widget -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    Recent Payments
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">John Doe - $200</li>
                    <li class="list-group-item">Jane Smith - $150</li>
                    <li class="list-group-item">Alice Johnson - $300</li>
                </ul>
            </div>
        </div>
    </div>
</div>