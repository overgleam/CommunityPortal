@model CommunityPortal.Models.Homeowners.HomeownerSettingsViewModel
@{
    ViewData["Title"] = "Homeowner Settings";
    Layout = "~/Views/Shared/_HomeownersLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container-fluid py-4">
    <div class="settings-dashboard">
        <div class="row g-4">
            <!-- Profile Card -->
            <div class="col-lg-4">
                <div class="card profile-card shadow-lg border-0 rounded-4 animate__animated animate__fadeIn">
                    <div class="card-header bg-gradient-primary text-white py-4 border-0">
                        <h4 class="mb-0"><i class="fas fa-home me-2"></i>My Residence</h4>
                        <p class="text-white-50 mb-0 mt-2">Your registered property details</p>
                    </div>
                    <div class="card-body text-center p-4">
                        <div class="community-badge mb-4">
                            <img src="~/images/profile.jpg" alt="Building" class="profile-image">
                        </div>
                        <h5 class="text-muted mb-2">Block</h5>
                        <h2 class="fw-bold text-primary mb-3">@Model.BlockNumber</h2>
                        <h5 class="text-muted mb-2">House</h5>
                        <h2 class="fw-bold text-primary mb-4">#@Model.HouseNumber</h2>
                        <div class="address-box p-3 rounded-3 bg-light">
                            <p class="text-muted mb-0">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                @Model.Address
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Settings Form -->
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeIn">
                    <div class="card-header bg-white border-bottom-0 py-4">
                        <h4 class="mb-0 text-primary">
                            <i class="fas fa-user-cog me-2"></i>Account Settings
                        </h4>
                        <p class="text-muted mb-0 mt-2">Manage your personal information and security settings</p>
                    </div>
                    <div class="card-body p-4">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-controller="Homeowner" asp-action="Settings" method="post" class="needs-validation">
                            <div class="row g-4">
                                <div class="col-12 mb-4">
                                    <h5 class="text-primary mb-4">Personal Information</h5>
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="FirstName" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                <label asp-for="FirstName"></label>
                                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="LastName" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                <label asp-for="LastName"></label>
                                                <span asp-validation-for="LastName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="BlockNumber" class="form-control form-control-lg rounded-3" placeholder=" " disabled/>
                                                <label asp-for="BlockNumber"></label>
                                                <span asp-validation-for="BlockNumber" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="HouseNumber" class="form-control form-control-lg rounded-3" placeholder=" " disabled/>
                                                <label asp-for="HouseNumber"></label>
                                                <span asp-validation-for="HouseNumber" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <textarea asp-for="Address" class="form-control form-control-lg rounded-3"
                                                          placeholder=" " style="height: 100px"></textarea>
                                                <label asp-for="Address"></label>
                                                <span asp-validation-for="Address" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 mt-4">
                                    <h5 class="text-primary mb-4">Security Settings</h5>
                                    <div class="row g-4">
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="CurrentPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                <label asp-for="CurrentPassword"></label>
                                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="NewPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                <label asp-for="NewPassword"></label>
                                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                <label asp-for="ConfirmPassword"></label>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 text-end mt-5">
                                    <button type="submit" class="btn btn-primary btn-lg px-5 rounded-3 shadow-sm hover-shadow">
                                        <i class="fas fa-save me-2"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-dashboard {
        max-width: 1400px;
        margin: 0 auto;
    }

    .profile-card {
        overflow: hidden;
    }

    .community-badge {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid rgba(var(--bs-primary-rgb), 0.2);
        transition: all 0.3s ease;
    }

    .community-badge .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.3s ease;
    }

    .community-badge:hover {
        transform: scale(1.05);
        border-color: var(--bs-primary);
    }

    .community-badge:hover .profile-image {
        transform: scale(1.1);
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, var(--bs-primary), #2980b9);
    }

    .address-box {
        background: rgba(var(--bs-primary-rgb), 0.05);
        border: 1px solid rgba(var(--bs-primary-rgb), 0.1);
    }

    .form-control {
        transition: all 0.3s ease;
        border: 2px solid #e9ecef;
    }

    .form-control:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.25rem rgba(var(--bs-primary-rgb), 0.25);
    }

    .hover-shadow:hover {
        transform: translateY(-1px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        transition: all 0.3s ease;
    }

    .card {
        transition: all 0.3s ease;
    }

    .animate__animated {
        animation-duration: 0.6s;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}