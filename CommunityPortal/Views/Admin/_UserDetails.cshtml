@model CommunityPortal.Models.ApplicationUser

<div class="user-details-container">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="info-card">
                <div class="card-header">
                    <i class="material-icons">person</i>
                    <h5>User Information</h5>
                </div>
                <div class="info-content">
                    <div class="info-item">
                        <span class="label">Email</span>
                        <span class="value">@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Phone Number</span>
                        <span class="value">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Created At</span>
                        <span class="value">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                    <div class="info-item">
                        <span class="label">Updated At</span>
                        <span class="value">@Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="info-card">
                <div class="card-header">
                    <i class="material-icons">badge</i>
                    <h5>Profile Details</h5>
                </div>
                <div class="info-content">
                    @if (Model.Administrator != null)
                    {
                        <div class="role-badge admin">Admin</div>
                        <div class="info-item">
                            <span class="label">First Name</span>
                            <span class="value">@Model.Administrator.FirstName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Last Name</span>
                            <span class="value">@Model.Administrator.LastName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Address</span>
                            <span class="value">@Model.Administrator.Address</span>
                        </div>
                    }
                    else if (Model.Staff != null)
                    {
                        <div class="role-badge staff">Staff</div>
                        <div class="info-item">
                            <span class="label">First Name</span>
                            <span class="value">@Model.Staff.FirstName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Last Name</span>
                            <span class="value">@Model.Staff.LastName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Department</span>
                            <span class="value">@Model.Staff.Department</span>
                        </div>
                    }
                    else if (Model.Homeowner != null)
                    {
                        <div class="role-badge homeowner">Homeowner</div>
                        <div class="info-item">
                            <span class="label">First Name</span>
                            <span class="value">@Model.Homeowner.FirstName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Last Name</span>
                            <span class="value">@Model.Homeowner.LastName</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Block Number</span>
                            <span class="value">@Model.Homeowner.BlockNumber</span>
                        </div>
                        <div class="info-item">
                            <span class="label">House Number</span>
                            <span class="value">@Model.Homeowner.HouseNumber</span>
                        </div>
                        <div class="info-item">
                            <span class="label">Address</span>
                            <span class="value">@Model.Homeowner.Address</span>
                        </div>
                    }
                    else
                    {
                        <p class="no-info">No additional profile information available.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .user-details-container {
        padding: 1rem;
    }

    .info-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        height: 100%;
        transition: transform 0.2s;
    }

        .info-card:hover {
            transform: translateY(-2px);
        }

    .card-header {
        display: flex;
        align-items: center;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 12px 12px 0 0;
        border-bottom: 2px solid #e9ecef;
    }

        .card-header i {
            margin-right: 0.5rem;
            color: #6c757d;
        }

        .card-header h5 {
            margin: 0;
            color: #495057;
            font-weight: 600;
        }

    .info-content {
        padding: 1.5rem;
    }

    .info-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem 0;
        border-bottom: 1px solid #e9ecef;
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .label {
        color: #6c757d;
        font-weight: 500;
    }

    .value {
        color: #212529;
        font-weight: 400;
    }

    .role-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        margin-bottom: 1rem;
        font-weight: 600;
        text-align: center;
        width: fit-content;
    }

        .role-badge.admin {
            background: #cff4fc;
            color: #055160;
        }

        .role-badge.staff {
            background: #d1e7dd;
            color: #0f5132;
        }

        .role-badge.homeowner {
            background: #fff3cd;
            color: #664d03;
        }

    .no-info {
        color: #6c757d;
        text-align: center;
        font-style: italic;
        margin: 1rem 0;
    }
</style>