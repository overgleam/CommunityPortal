@model CommunityPortal.Models.Admin.AdminSettingsViewModel
@{
    ViewData["Title"] = "Admin Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="settings-dashboard">
            <!-- Content -->
            <div class="col-lg-9">
                <div class="tab-content">
                    <!-- Profile Tab -->
                    <div class="tab-pane fade show active" id="profile">
                        <div class="card shadow-sm animate__animated animate__fadeIn">
                            <div class="card-header bg-transparent">
                                <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i>Profile Settings</h4>
                            </div>
                            <div class="card-body">
                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="fas fa-check-circle me-2"></i>
                                        @TempData["SuccessMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        @TempData["ErrorMessage"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                <form asp-action="AdminSettings" method="post">
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="FirstName" class="form-control" placeholder=" " />
                                                <label asp-for="FirstName"></label>
                                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input asp-for="LastName" class="form-control" placeholder=" " />
                                                <label asp-for="LastName"></label>
                                                <span asp-validation-for="LastName" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-floating">
                                                <textarea asp-for="Address" class="form-control"
                                                          placeholder=" " style="height: 100px"></textarea>
                                                <label asp-for="Address"></label>
                                                <span asp-validation-for="Address" class="text-danger small"></span>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <h5 class="border-bottom pb-2">Change Password</h5>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="CurrentPassword" class="form-control" placeholder=" " />
                                                <label asp-for="CurrentPassword"></label>
                                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="NewPassword" class="form-control" placeholder=" " />
                                                <label asp-for="NewPassword"></label>
                                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-floating">
                                                <input asp-for="ConfirmPassword" class="form-control" placeholder=" " />
                                                <label asp-for="ConfirmPassword"></label>
                                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 text-end">
                                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                                <i class="fas fa-save me-2"></i>Save Changes
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}