@model IEnumerable<CommunityPortal.Models.ServiceRequest.ServiceCategory>
@using CommunityPortal.Models.ServiceRequest

@{
    ViewData["Title"] = "Deleted Service Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Deleted Service Categories</h2>
        <a asp-action="ServiceCategories" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Active Categories
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Deleted At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.DeletedAt?.ToString("g")</td>
                                <td>
                                    <form asp-action="RestoreServiceCategory" asp-route-id="@category.Id" 
                                          method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-undo"></i> Restore
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {

} 