            flex-direction: column;
        }

        .approval-item {
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .approval-item:last-child {
            border-bottom: none;
        }

        .approval-content h3 {
            margin: 0 0 5px 0;
            font-size: 16px;
            font-weight: 600;
        }

        .approval-content p {
            margin: 0 0 10px 0;
            font-size: 14px;
            color: #67748e;
        }

        .approval-actions button {
            margin-right: 5px;
        }

        /* Activity list */
        .activity-list {
            display: flex;
            flex-direction: column;
        }

        .activity-item {
            display: flex;
            padding: 15px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            margin-right: 15px;
        }

        .activity-content {
            flex: 1;
        }

        .activity-content h3 {
            margin: 0 0 5px 0;
            font-size: 16px;
            font-weight: 600;
        }

        .activity-content p {
            margin: 0 0 5px 0;
            font-size: 14px;
            color: #67748e;
        }

        .activity-time {
            font-size: 13px;
            color: #94a3b8;
        }

        /* Responsive adjustments */
        @@media (max-width: 767px) {
            .welcome-card {
                flex-direction: column;
                text-align: center;
            }

            .welcome-actions .btn {
                display: block;
                width: 100%;
                margin: 0 0 10px 0;
            }
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation for stats cards
            const statsCards = document.querySelectorAll('.stats-card');
            statsCards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100 * index);
            });

            // Initialize any interactive elements
            const dashboardCards = document.querySelectorAll('.dashboard-card');
            dashboardCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
} 