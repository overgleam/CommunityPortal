@model CommunityPortal.Models.Admin.AdminSettingsViewModel
@{
    ViewData["Title"] = "Admin Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="~/css/admin/settings.css" rel="stylesheet">
}

<div class="container-fluid py-4">
    <div class="settings-dashboard">
        <div class="col-lg-9 mx-auto">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="profile">
                    <div class="card shadow-lg rounded-3 border-0 animate__animated animate__fadeIn">
                        <div class="card-header bg-white border-bottom-0 py-4">
                            <h4 class="mb-0 text-primary">
                                <span class="material-icons-round align-middle me-2">manage_accounts</span>Profile Settings
                            </h4>
                            <p class="text-muted mb-0 mt-2">Manage your personal information and security settings</p>
                        </div>
                        
                        <div class="card-body px-4">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show border-0 rounded-3" role="alert">
                                    <span class="material-icons-round align-middle me-2">check_circle</span>
                                    @TempData["SuccessMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger alert-dismissible fade show border-0 rounded-3" role="alert">
                                    <span class="material-icons-round align-middle me-2">error</span>
                                    @TempData["ErrorMessage"]
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }

                            <form asp-action="Settings" method="post" class="needs-validation">
                                <div class="row g-4">
                                    <div class="col-12">
                                        <h5 class="text-primary mb-4">
                                            <span class="material-icons-round align-middle me-2">person</span>Personal Information
                                        </h5>
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="FirstName" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                    <label asp-for="FirstName"></label>
                                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input asp-for="LastName" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                    <label asp-for="LastName"></label>
                                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating">
                                                    <textarea asp-for="Address" class="form-control form-control-lg rounded-3"
                                                              placeholder=" " style="height: 120px"></textarea>
                                                    <label asp-for="Address"></label>
                                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 mt-5">
                                        <h5 class="text-primary mb-4">
                                            <span class="material-icons-round align-middle me-2">security</span>Security Settings
                                        </h5>
                                        <div class="row g-4">
                                            <div class="col-md-4">
                                                <div class="form-floating">
                                                    <input asp-for="CurrentPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                    <label asp-for="CurrentPassword"></label>
                                                    <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-floating">
                                                    <input asp-for="NewPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                    <label asp-for="NewPassword"></label>
                                                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-floating">
                                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3" placeholder=" " />
                                                    <label asp-for="ConfirmPassword"></label>
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 text-end mt-5">
                                        <button type="submit" class="btn btn-primary btn-lg px-5 rounded-3 shadow-sm hover-shadow">
                                            <span class="material-icons-round align-middle me-2">save</span>Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}